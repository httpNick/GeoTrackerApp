<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ff5b4fff"
    android:orientation="vertical"
    android:weightSum="1">



    <TextView
        android:layout_width="344dp"
        android:layout_height="105dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="GeoTracker"
        android:id="@+id/textView"
        android:background="@mipmap/map"
        android:paddingLeft="0dp"
        android:textAlignment="center"
        android:textColor="#ffffaa49"
        android:singleLine="false"
        android:textSize="50dp"
        android:textStyle="bold|italic"
        android:layout_marginLeft="0dp"
        android:gravity="center_vertical|center_horizontal" />
    <EditText
        android:id="@+id/email_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="@string/email_hint"
        android:ems="10"/>
    <EditText
        android:id="@+id/passwordOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_below="@+id/email_address"
        android:layout_gravity="center_horizontal"
        android:hint="@string/password_hint"
        android:ems="10"/>
    <EditText
        android:id="@+id/passwordTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_below="@+id/passwordOne"
        android:hint="@string/password_again_hint"
        android:ems="10"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/secQues1"
        android:layout_gravity="center_horizontal"
        android:hint="Security Question #1"
        android:editable="true"
        android:clickable="true"
        android:enabled="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/secAnswer1"
        android:editable="true"
        android:enabled="true"
        android:hint="Answer #1" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/secQues2"
        android:hint="Security Question #2"
        android:enabled="true"
        android:editable="true"
        android:clickable="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/secAnswer2"
        android:clickable="true"
        android:editable="true"
        android:hint="Answer #2"
        android:enabled="true" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/passwordTwo"
        android:layout_margin="10dip"
        android:text="Register"
        android:textSize="24sp"/>


</LinearLayout>
